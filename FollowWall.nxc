SetSensorUltrasonic(IN_2);
float distanceToWall = sensorUS(IN_2);

task sensorScan(){
  while(true)
  {

    if (distanceToWall < 25 && distanceToWall > 15)
    {
      OnFwdSync(OUT_BC, 60, 0)
    }
    else if (distanceToWall > 25) {
      OnFwdSync(OUT_BC, 60, 50)
    }
    else
    {
      OnFwdSync(OUT_BC, 60, -50)
    }
  }


task main()
{
  Precedes(GoToWall, sensorScan);
  SetSensorUltrasonic(IN_2);
}
