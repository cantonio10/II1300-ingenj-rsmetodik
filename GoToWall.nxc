mutex moveMutex;

task sensorScan(){
  while(true){
    if (SensorUS(IN_2) < 30) {
      Acquire(moveMutex);
      Off(OUT_BC);
    }

    SetSensorUltrasonic(IN_2);
    SensorUS(IN_2);
    Release(moveMutex);
    Yield();
    }
}

task movetoWall(){
  Acquire(moveMutex);

  while(SensorUS(IN_2) > 30){
    RotateMotorEx(OUT_BC, 30, 5210, 0, true, true);
    Release(moveMutex);
    Yield();
  }
}

sub GoToWall()
{
  Precedes(movetoWall, sensorScan);
  SetSensorUltrasonic(IN_2);
}
