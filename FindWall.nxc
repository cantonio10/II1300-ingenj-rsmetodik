#include "RotateRobot.nxc"

task FindWall(){
  float points[10];
  float closestPointDistance = 9999;
  float closestPointDegrees

  //Gets and saves all the points
  for(int i = 0; i < ArrayLen(points); i++){
    RotateRobot(360 / ArrayLen(points));
    points[i] = ULTARSONICSENSOR.length;
    if(point[i] < closestPointDistance){
      closestPointDistance = point[i];
      closestPointDegrees = (360 / ArrayLen(points)) * i;
    }
  }
  //Rotate to the correct point
  if(closestPointDegrees > 180)
    RotateRobot((closestPointDegrees - 180) * -1)
  else
    RotateRobot(closestPointDegrees);
}
